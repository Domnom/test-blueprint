{
  "name": "master-class-trello-clone",
  "version": "1.0.0",
  "description": "MasterClass Trello Clone monorepo",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Setup tests\"",
    "build:dev": "webpack --config webpack.dev.js",
    "build:prod": "webpack --config webpack.prod.js",
    "start:dev": "clear && webpack-dev-server --open --hot --config webpack.dev.js",
    "story": "start-storybook -p 6006",
