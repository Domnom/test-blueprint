import React from 'react';
import { storiesOf } from '@storybook/react';
import centeredAddon from '@storybook/addon-centered';
import {
    withKnobs,
    text as textAddon,
    object as objectAddon
} from '@storybook/addon-knobs';
 

/**
 * @name Component
 * @requires import 
 */
import CardList from './card-list.component';


/**
 * Story Category
 * @param {String} categoryName - the tab name 
 * @param {NodeModule} module - no diea what this does? 
 */
const stories = storiesOf('Components/CardList', module)
                    .addDecorator(centeredAddon)
                    .addDecorator(withKnobs);

/** 
 * Stories 
 * @name add 
 * @param {string} storyName - story name which is the name of the tab 
 * @param {Function:JSX.Element} fn - returns the react element 
 */
stories
    .add('default', ()=>{

        let name = textAddon("name", "Card list");

        let cardsData = objectAddon('cardsData', [
            {
{{partial_1}}                name: "Card 1"
            },
            {
{{partial_2}}                name: "Card 2"
            }
        ]);


        return (<CardList 
                    name={name}
                    cardsData={cardsData}
                />)
    },
    {
        notes: `#CardList
            CardList needs items and style overrides
        `
    })
    