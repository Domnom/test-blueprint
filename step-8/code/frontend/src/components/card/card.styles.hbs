.cardComponent {
    width: 100%;
    background: #fff;
    border-radius: 5px;
    box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.3);
    cursor: pointer;
    width: 250px;
    height: 150px;
}

    .cardComponent > .cardName {
        display: flex;
        width: 100%;
        height: 100%;
        justify-content: center;
        align-items: center;;
        white-space: normal;
        word-break: break-all;
        word-wrap: break-word;
    }